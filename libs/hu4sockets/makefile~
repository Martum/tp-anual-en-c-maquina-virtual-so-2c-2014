# Makefile template for shared library
 
CC = gcc # C compiler
CFLAGS = -fPIC -Wall -Wextra -O2 -g # C flags
LDFLAGS = -shared # linking flags
RM = rm -f # rm command
TARGET_LIB = libtarget.so # target lib
 
SRCS = main.c src1.c src2.c # source files
OBJS = $(SRCS:.c=.o)
 
 .PHONY: instalar
instalar: ${TARGET_LIB}
 
$(TARGET_LIB): $(OBJS)
	$(CC) ${LDFLAGS} -o $@ $^
 
$(SRCS:.c=.d):%.d:%.c
	$(CC) $(CFLAGS) -MM $< >$@
 
include $(SRCS:.c=.d)
 
 .PHONY: desinstalar
desinstalar:
	-${RM} ${TARGET_LIB} ${OBJS} $(SRCS:.c=.d) 
